<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Payment Result</title>
    <link rel="stylesheet" href="base.css">
</head>
<body>

<h2 id="result"></h2>

<script>
    const params = new URLSearchParams(window.location.search);
    const status = params.get("status");

    document.getElementById("result").innerText =
        status === "success"
        ? "Payment Successful"
        : "Payment Failed";
</script>

</body>
</html>
